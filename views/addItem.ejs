<div class="clearfix">
  <div class="modal-header model-grey-color">
    <h4 class="modal-title">Add new item</h4>
  </div>
  <div class="modal-body">
      <form class="form-horizontal" role="form">
         <div class="form-group">
            <label class="col-sm-3 control-label">Name <sup class="sup-color">*</sup></label>
            <div class="col-sm-8">
               <input type="text" ng-model="name" placeholder="Name" class="form-control">
            </div>
         </div>
		 <div class="form-group">
            <label class="col-sm-3 control-label">Price <sup class="sup-color">*</sup></label>
            <div class="col-sm-8">
               <input type="number" min="0" ng-model="price" placeholder="Price" class="form-control">
            </div>
         </div>
		 <div class="form-group">
              <label class="col-sm-3 control-label">Description </label>
              <div class="col-sm-8">
                  <input type="text" ng-model="description" placeholder="Description..." class="form-control">
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-4 control-label">Manufacturer <sup class="sup-color">*</sup></label>
              <div class="col-sm-8">
                  <input type="text" ng-model="manufacturer" class="form-control">
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-3 control-label">Condition <sup class="sup-color">*</sup></label>
              <div class="col-sm-8">
                  <select ng-model="condition">
                      <option value="New">New</option>
                      <option value="Used">Used</option>
                  </select>
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-3 control-label">Category <sup class="sup-color">*</sup></label>
              <div class="col-sm-8">
                  <input type="text" ng-model="category" placeholder="Category" class="form-control">
              </div>
          </div>
          <div class="form-group">
              <label class="col-sm-3 control-label">Image url</label>
              <div class="col-sm-8">
                  <input type="text" ng-model="img" placeholder="*.jpg" class="form-control">
              </div>
          </div>

      </form>
  </div>
  <div class="modal-footer model-grey-color">
    <button class="btn btn-success" ng-click="saveItem()"><i class="glyphicon glyphicon-floppy-save"></i> Save</button>
    <button class="btn btn-danger" ng-click="cancelModal()"><i class="glyphicon glyphicon-remove"></i> Close</button>
  </div>
</div>


