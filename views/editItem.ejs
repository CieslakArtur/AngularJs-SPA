<div class="clearfix" id="edit-modal-user-views">
  <div class="modal-header model-grey-color">
      <h4 class="modal-title">Edit <b>{{item.name}}</b></h4>
  </div>
    <div class="modal-body">
        <form class="form-horizontal" role="form">
            <input type="text" ng-model="item.id" class="form-control" hidden>
            <div class="form-group">
                <label class="col-sm-3 control-label">Name <sup class="sup-color">*</sup></label>
                <div class="col-sm-8">
                    <input type="text" ng-model="item.name" placeholder="Name" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Price <sup class="sup-color">*</sup></label>
                <div class="col-sm-8">
                    <input type="number" min="0" ng-model="item.price" placeholder="Price" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Description </label>
                <div class="col-sm-8">
                    <textarea rows="4" type="text" ng-model="item.description" placeholder="Description..." class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Manufacturer <sup class="sup-color">*</sup></label>
                <div class="col-sm-8">
                    <input type="text" ng-model="item.manufacturer" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Condition <sup class="sup-color">*</sup></label>
                <div class="col-sm-8">
                    <select ng-model="item.condition">
                        <option value="New">New</option>
                        <option value="Used">Used</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Category <sup class="sup-color">*</sup></label>
                <div class="col-sm-8">
                    <input type="text" ng-model="item.category" placeholder="Category" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Image url</label>
                <div class="col-sm-8">
                    <input type="text" ng-model="item.img" placeholder="*.jpg" class="form-control">
                </div>
            </div>

        </form>
    </div>
  <div class="modal-footer model-grey-color">
    <button class="btn btn-success" ng-click="updateItem()"><i class="glyphicon glyphicon-floppy-save"></i> Update</button>
    <button class="btn btn-danger" ng-click="cancelModal()"><i class="glyphicon glyphicon-remove"></i> Close</button>
  </div>
</div>


